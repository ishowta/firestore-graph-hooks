{
  "name": "firestore-graph-hooks",
  "version": "1.0.0-alpha.4",
  "license": "MIT",
  "author": "ishowta",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint src/**/*",
    "prepare": "husky install",
    "watch": "tsup --watch",
    "emulator": "firebase emulators:start --project demo-firebase-graph-hooks",
    "test": "firebase emulators:exec --project demo-firebase-graph-hooks \"pnpm jest --passWithNoTests\"",
    "test:ci": "firebase emulators:exec --project demo-firebase-graph-hooks \"pnpm jest --passWithNoTests --ci --coverage --maxWorkers=2\"",
    "test:coverage": "firebase emulators:exec --project demo-firebase-graph-hooks \"pnpm jest --coverage\"",
    "release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "peerDependencies": {
    "firebase": "^9.0.0",
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "loglevel": "^1.8.0",
    "loglevel-plugin-prefix": "^0.8.4"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.3",
    "@nodeguy/channel": "^1.0.2",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^28.1.4",
    "@types/lodash-es": "^4.17.6",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/traverse": "^0.6.32",
    "@typescript-eslint/eslint-plugin": "^5.30.3",
    "@typescript-eslint/parser": "^5.30.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase": "^9.8.4",
    "firebase-tools": "^11.2.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "semantic-release": "^19.0.3",
    "traverse": "^0.6.6",
    "ts-jest": "^28.0.5",
    "tsup": "^6.1.2",
    "typescript": "~4.5.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ishowta/firestore-join-hooks.git"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
