{
  "name": "firestore-graph-hooks",
  "version": "1.0.0-alpha.1",
  "license": "MIT",
  "author": "ishowta",
  "main": "dist/index.js",
  "module": "dist/firestore-graph-hooks.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "emulator": "firebase emulators:start --project demo-firebase-graph-hooks",
    "test": "firebase emulators:exec --project demo-firebase-graph-hooks \"dts test --passWithNoTests\"",
    "test:ci": "firebase emulators:exec --project demo-firebase-graph-hooks \"dts test --passWithNoTests --ci --coverage --maxWorkers=2\"",
    "test:coverage": "firebase emulators:exec --project demo-firebase-graph-hooks \"dts test --coverage\"",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "testEnvironment": "jsdom"
  },
  "peerDependencies": {
    "firebase": "^9.0.0",
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "size-limit": [
    {
      "path": "dist/firestore-graph-hooks.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/firestore-graph-hooks.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "lodash-es": "^4.17.21",
    "loglevel": "^1.8.0",
    "loglevel-plugin-prefix": "^0.8.4"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.2",
    "@nodeguy/channel": "^1.0.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/react-hooks": "^7.0.2",
    "@tsconfig/create-react-app": "^1.0.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.4.0",
    "@types/lodash-es": "^4.17.6",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/traverse": "^0.6.32",
    "dts-cli": "^1.2.0",
    "firebase": "^9.6.5",
    "firebase-tools": "^10.2.0",
    "husky": "^7.0.4",
    "lodash": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "semantic-release": "^19.0.2",
    "size-limit": "^7.0.8",
    "traverse": "^0.6.6",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ishowta/firestore-join-hooks.git"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
